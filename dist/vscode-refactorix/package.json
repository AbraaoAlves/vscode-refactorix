{
  "name": "vscode-refactorix",
  "description": "TypeScript refactoring tools for Visual Studio Code",
  "version": "0.0.1",
  "publisher": "christian@o3tt3rli.com",
  "engines": {
    "vscode": "^0.10.1"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onLanguage:typescript"
  ],
  "main": "./out/src/extension",
  "contributes": {
    "commands": [
      {
        "command": "extension.refactorix.ExtractVariable",
        "title": "x: Extract variable"
      },
      {
        "command": "extension.refactorix.ArrowFunction.SingleStatementBlockToExpression",
        "title": "x: Arrow function single statement block to expression"
      },
      {
        "command": "extension.refactorix.ArrowFunction.SingleStatementBlockToExpressionAll",
        "title": "x: Arrow function single statement block to expression (all)"
      },
      {
        "command": "extension.refactorix.ArrowFunctionExpressionToBlock",
        "title": "x: Expression to block"
      },
      {
        "command": "extension.refactorix.Semicolons.Add",
        "title": "x: Add semicolons"
      },
      {
        "command": "extension.refactorix.Semicolons.Remove",
        "title": "x: Remove semicolons"
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "node ./node_modules/vscode/bin/compile",
    "compile": "node ./node_modules/vscode/bin/compile --watch -p ./"
  },
  "dependencies": {
    "typescript": "*"
  },
  "devDependencies": {
    "tslint": "^3.8.1",
    "vscode": "0.10.x"
  }
}